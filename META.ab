version = "$(pkg_version)"
description = "A ppx rewriter that simplifies building s-expressions from ocaml values"
requires = "ppx_core ppx_driver ppx_here.expander ppx_sexp_conv.expander"
archive(ppx_driver, byte  ) = "ppx_sexp_value.cma"
archive(ppx_driver, native) = "ppx_sexp_value.cmxa"
plugin(ppx_driver, byte  ) = "ppx_sexp_value.cma"
plugin(ppx_driver, native) = "ppx_sexp_value.cmxs"
exists_if = "ppx_sexp_value.cma"
ppx(-ppx_driver,-custom_ppx) = "./ppx"
